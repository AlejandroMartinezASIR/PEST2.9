<?php
use src\Calculator;

it('Suma', fn() => expect((new Calculator())->add(2,3))->toEqual(5));
it('Resta', fn() => expect((new Calculator())->subtract(5,3))->toEqual(2));
it('Multiplica', fn() => expect((new Calculator())->multiply(3,4))->toEqual(12));
it('Divide', fn() => expect((new Calculator())->divide(10,2))->toEqual(5));

it('Activa en cero', function() {
    $this->expectException(\InvalidArgumentException::class);
    (new Calculator())->divide(1,0);
});
